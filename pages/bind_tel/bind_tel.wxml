<!--pages/bind_tel/bind_tel.wxml-->
<view class="container">
  <view class="title-bar">
    <text>绑定手机</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
</view>
<view class="y_bind">
  <text>已绑手机</text>
  <text>{{mob}}</text>
</view>
<view class="view1">修改号码后，下次登陆需要使用新手机号</view>
<view class="view2">
  <view class="tels">
    <view>手机号码</view>
    <input placeholder="请输入新手机号码" type="number" bindinput="tel_num"></input>
  </view>
  <view class="yz_code">
    <view>验证码</view>
    <input placeholder="请输入验证码" type="number" bindinput="code" ></input>
    <view wx:if='{{is_ok}}' bindtap="sendCode">获取验证码</view>
    <view wx:else>{{sendCode}}</view>
  </view>
</view>
<view class="btns" bindtap="btns">确认更换</view>