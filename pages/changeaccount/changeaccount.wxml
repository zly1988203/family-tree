<!--pages/changeaccount/changeaccount.wxml-->
<view class="container">
  <view class="title-bar">
    <text>家谱账号切换</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="title">选择要切换的家谱账号</view>
      <view class="account-list">
        <block wx:for="{{accountlist}}" wx:key="key" wx:for-index="idx" wx:for-item="item">
          <view class="account-item {{item.id == userid?'active':''}}" data-id="{{idx}}" bindtap="changeSelectAccount">
            <view>{{item.fullName}}（{{item.account}}）</view>
            <view wx:if='{{item.id == userid}}'>正在使用</view>
            <view wx:if='{{item.bandFlag&&item.id != userid}}'>已绑定</view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>

