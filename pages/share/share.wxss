/* pages/share/share.wxss */
.container {
  background: #fff;
  padding-top: 25px;
}
.page-content {
  width: 100%;
  height: calc(100% - 34px);
}
.page-content .main{
  background: #f0f0f0;
  height: calc(100% - calc(132vmin / 7.5));
}
.search-form{
  padding: calc(30vmin / 7.5) calc(30vmin / 7.5);
}
.search-form .form-group{
  display: inline-block;
  vertical-align: middle;
  width: calc(600vmin / 7.5);
}
