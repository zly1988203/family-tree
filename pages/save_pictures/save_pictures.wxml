<!--pages/save_pictures/save_pictures.wxml-->
<view class="container">
  <view class="title-bar">
    <text>生成分享图</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="tar-img" id="img_content">
        <block wx:if="{{isAuth}}">
          <image src="{{shareImg}}"></image>
        </block>
        <block wx:if="{{!isAuth}}">
          <view class="help-block">
            <view class="help-info">
              <view class="info-text">
                <text class="title">名门修谱申请获取以下权限</text>
                <text class="info">获得您的公开信息（头像、昵称）</text>
              </view>
              <button class="get-userinfo" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信授权</button>
            </view>
          </view>
        </block>
        <alert id="alert"/>
      </view>
      <view class="tqm">
        <view>提取码</view>
        <view style="background-image:url({{baseOss}}/attachment/images/share_icon03.png);">{{copy_code}}</view>
        <view bindtap="copy_code">复制</view>
      </view>
      <view class="bc_img" bindtap="canvasSave">保存为图片</view>
    </view>
  </view>
  <view class="canvas-cover" catchtouchmove='true'>
    <canvas canvas-id="canvas" class="jiapu-canvas" style="width: {{canvas.width}}px; height: {{canvas.height}}px;"></canvas>
  </view>
</view>