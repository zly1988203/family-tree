/* pages/home/home.wxss */
.container {
  padding-top: 25px;
}
.title-bar text {
  color: #fff;
}
.container{
  background-color: #f7f7f7;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center top;
}
.search-form{
  padding: calc(10vmin / 7.5) calc(30vmin / 7.5) 0;
}
.search-form .form-group.inside .form-control{
  padding-right: calc(70vmin / 7.5);
  padding-left: calc(30vmin / 7.5);
  border-bottom: none;
  background: #fff;
  color: #000;
  border-radius: calc(30vmin / 7.5);
  line-height: calc(60vmin / 7.5);
  font-size: calc(24vmin / 7.5);
  height: calc(60vmin / 7.5);
  margin: calc(20vmin / 7.5) 0;
}
.search-form .form-group.inside button{
  position: absolute;
  width: calc(60vmin / 7.5);
  height: calc(60vmin / 7.5);
  line-height: calc(60vmin / 7.5);
  min-height: 0!important;
  padding: 0!important;
  background-color: transparent;
  background-size: calc(30vmin / 7.5) calc(30vmin / 7.5);
  background-position: center center;
  background-repeat: no-repeat;
  right: calc(10vmin / 7.5);
  top: 0;
}
.search-form .help-block{
  white-space: nowrap;
  overflow: hidden;
}
.search-form .help-block label{
  font-size: calc(24vmin / 7.5);
  color: #fff;
  display: inline-block;
  vertical-align: middle;
}
.search-form .help-block  .keywords-group{
  font-size: 0;
  white-space: nowrap;
  display: inline-block;
  vertical-align: middle;
}
.search-form .help-block  .keywords-group navigator{
  display: inline-block;
  vertical-align: middle;
  font-size: calc(24vmin / 7.5);
  background-color: rgba(255,255,255,0.5);
  color: #fff;
  height: calc(42vmin / 7.5);
  line-height: calc(42vmin / 7.5);
  border-radius: calc(21vmin / 7.5);
  padding: 0 calc(24vmin / 7.5);
  margin-left: calc(20vmin / 7.5);
}
.nav-group{
  margin: calc(260vmin / 7.5) calc(30vmin / 7.5) 0;
  border-radius: calc(20vmin / 7.5);
  height: calc(406vmin / 7.5);
  background: #fff;
  box-shadow: 0 0 calc(10vmin / 7.5) calc(2vmin / 7.5) #d2d2d2;
  line-height: 0;
}
.nav-group .item{
  width: 50%;
  height: calc(203vmin / 7.5);
  overflow: hidden;
  display: inline-block;
  text-align: center;
}
.nav-group .item:nth-child(1),.nav-group .item:nth-child(2){
  border-bottom: 1px solid #dfdfdf;
}
.nav-group .item:nth-child(1),.nav-group .item:nth-child(3){
  border-right: 1px solid #dfdfdf;
}
.nav-group .item navigator{
  display: block;
  text-align: center;
}
.nav-group .item image{
  display: inline-block;
  height: calc(76vmin / 7.5);
  width: calc(76vmin / 7.5);
  vertical-align: middle;
  margin-right: calc(28vmin / 7.5);
}
.nav-group .item text{
  display: inline-block;
  vertical-align: middle;
  font-size: calc(32vmin / 7.5);
  line-height: calc(203vmin / 7.5);
}
.add-swiper{
  width: 100%;
  height: calc(172vmin / 7.5);
  margin-top: calc(20vmin / 7.5);
  padding: calc(20vmin / 7.5) calc(30vmin / 7.5);
  background: #fff;
}
.add-swiper .slide-image {
  height: 100%;
  width: 100%;
  border-radius: calc(66vmin / 7.5);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-swiper .swiper-out {
  width: 100%;
  height: 100%;
}

.add-swiper .active-item .slide-image {
}

.add-swiper .swp-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.6;
}

.add-swiper .active-item {
  opacity: 1;
}

.add-swiper .swp-dot {
  position: absolute;
  bottom: calc(30vmin / 7.5);
  width: 100%;
  display: flex;
  justify-content: center;
  flex: 1;
  left: 0;
}

.m-r-8 {
  margin-right: 8rpx;
}

.m-l-8 {
  margin-right: 8rpx;
}

.square-12 {
  width: 12rpx;
  height: 12rpx;
  background-color: #d8d8d8;
  border-radius: 6rpx;
  transition: width 0.2s linear;
}
.square-12.active {
  background-color: #3c3c3c;
  width: 36rpx;
  transition: width 0.2s linear;
}