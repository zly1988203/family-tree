<!--pages/changerole/changerole.wxml-->
<view class="container">
  <view class="title-bar">
    <text>登陆角色切换</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="title">请选择登入身份</view>
      <view class="role-list">
        <block wx:for="{{rolelist}}" wx:key="key" wx:for-index="idx" wx:for-item="item">
          <view class="role-item {{item.selected?'active':''}}" data-id="{{idx}}" bindtap="changeSelectRole">
            <view class="info">
              <view class="avatar">
                <image src="{{baseOss}}/attachment/images/{{item.type==1?'role_avatar_user.png':'role_avatar_service.png'}}"></image>
              </view>
              <view class="detail">
                <text class="nickname">{{item.nickname}}</text>
                <text class="type">{{item.type==1?'家谱用户':'服务商'}}</text>
              </view>
            </view>
            <view class="use-status">
              {{item.selected?'当前使用':''}}
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>

