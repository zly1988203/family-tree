/* pages/changerole/changerole.wxss */
.container {
  background: #fff;
  padding-top: 25px;
}
.page-content {
  width: 100%;
  height: calc(100% - 34px);
}
.page-content .main{
  background: #fff;
}
.title{
  padding: 0 calc(30vmin / 7.5);
  font-size: calc(42vmin / 7.5);
  color: #121212;
  line-height: calc(244vmin / 7.5);
}
.role-list{
  padding: 0 calc(30vmin / 7.5);
}
.role-item{
  width: 100%;
  margin: calc(10vmin / 7.5) 0;
  border-radius: calc(8vmin / 7.5);
  border: 2px solid transparent;
  line-height: 0;
  padding: calc(20vmin / 7.5);
  background: #f5f5f5;
}
.role-item.active{
  border-color: #ebb450;
  background: #fdf7ed;
}
.role-item .info,.role-item .use-status,.role-item .avatar,.role-item .detail{
  display: inline-block;
  vertical-align: middle;
}
.role-item .avatar{
  width: calc(102vmin / 7.5);
  height: calc(102vmin / 7.5);
  border-radius: calc(51vmin / 7.5);
  overflow: hidden;
  background: #d7d8db;
}
.role-item.active .avatar{
  background: #f8e5c3;
}
.role-item .detail{
  width: calc(100% - 102vmin / 7.5);
}
.role-item .detail .nickname{
  padding-left: calc(24vmin / 7.5);
  display: block;
  width: 100%;
  color: #333333;
  font-size: calc(32vmin / 7.5);
  line-height: calc(48vmin / 7.5);
}
.role-item .detail .type{
  padding-left: calc(24vmin / 7.5);
  display: block;
  width: 100%;
  color: #8f8f8f;
  font-size: calc(24vmin / 7.5);
  line-height: calc(36vmin / 7.5);
}
.role-item .avatar image{
  width: 100%;
  height: 100%;
}
.role-item .use-status{
  width: calc(120vmin / 7.5);
  text-align: right;
}
.role-item .use-status::after{
  content: " ";
  width: calc(12vmin / 7.5);
  height: calc(12vmin / 7.5);
  border: 2px solid #8f8f8f;
  border-bottom-color: transparent;
  border-left-color: transparent;
  transform: rotate(45deg);
  display: inline-block;
}
.role-item.active .use-status{
  color: #ebb450;
}
.role-item.active .use-status::after{
  content: none;
}
.role-item .info{
  width: calc(100% - 120vmin / 7.5);
}