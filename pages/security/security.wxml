<!--pages/security/security.wxml-->
<view class="container">
  <view class="title-bar">
    <text>修改密码</text>
    <navigator  hover-class="none" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="form-content">
        <view class="form-group inside required">
          <label>原密码</label>
          <view class="input-group t_r">
            <input type="text" password="{{!showOldpwd}}" class="form-control" maxlength="16" bindinput="inputgetName" data-name="security.oldpwd" value="{{security.oldpwd}}" placeholder="请输入您的旧密码" />
          </view>
        </view>
        <view class="form-group inside required">
          <label>新密码</label>
          <view class="input-group t_r">
            <input type="text" password="{{!showNewpwd}}" class="form-control" maxlength="16" bindinput="inputgetName" data-name="security.newpwd" value="{{security.newpwd}}" placeholder="请输入您的新密码" />
          </view>
        </view>
      </view>
      <view class="form-group" style="padding:0 calc(90vmin / 7.5)">
          <button class="btn btn-submit" bindtap="editSubmit">提交</button>
      </view>
    </view>
    <alert id="alert"/>
  </view>
</view>
