<!--pages/userinfo/uerinfo.wxml-->
<view class="container">
  <view class="title-bar">
    <text>个人资料</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="form-content">
        <view class="form-group inside">
          <label>昵称</label>
          <view class="input-group t_r">
            <input type="text" class="form-control" maxlength="16" bindinput="inputgetName" data-name="userinfo.name" value="{{userinfo.name}}" placeholder="请输入您的昵称" />
          </view>
        </view>
        <view class="form-group inside">
          <label>手机</label>
          <view class="input-group t_r">
            <input type="text" class="form-control" maxlength="11" bindinput="inputgetName" data-name="userinfo.mobile" value="{{userinfo.mobile}}" placeholder="请输入您的手机" disabled='true'/>
          </view>
        </view>
        <view class="form-group inside">
          <label>生日</label>
          <view class="input-group picker">
            <!-- <input type="text" class="form-control" maxlength="16" bindinput="inputgetName" data-name="userinfo.birthday" value="{{userinfo.birthday}}" placeholder="请选择日期" disabled="true"/> -->
            <picker mode="date" class="form-control" data-name="userinfo.birthday" bindchange="inputgetName" value="{{userinfo.birthday}}">
              <view class="picker">
              {{userinfo.birthday?userinfo.birthday:'请选择日期'}}
              </view>
            </picker>
          </view>
        </view>
        <view class="form-group inside">
          <label>性别</label>
          <view class="input-group">
            <picker class="form-control" data-name="userinfo.sex" bindchange="inputgetName" value="{{userinfo.sex}}" range="{{['请选择性别','男','女']}}">
              <view class="picker">
                {{userinfo.sex==1?'男':(userinfo.sex==2?'女':'请选择性别')}}
              </view>
            </picker>
          </view>
        </view>
        <view class="form-group inside">
          <label>邮箱</label>
          <view class="input-group t_r">
            <input type="text" class="form-control" maxlength="16" bindinput="inputgetName" data-name="userinfo.email" value="{{userinfo.email}}" placeholder="请输入您的邮箱" />
          </view>
        </view>
      </view>
      <view class="form-group" style="padding:0 calc(90vmin / 7.5)">
          <button class="btn btn-submit" bindtap="editSubmit">提交</button>
      </view>
    </view>
    <alert id="alert"/>
  </view>
</view>
