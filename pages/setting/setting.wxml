<!--pages/setting/setting.wxml-->
<view class="container">
  <view class="title-bar">
    <text>设置</text>
    <navigator hover-class="navigator-hover" open-type="navigateBack" delta="1">返回</navigator>
  </view>
  <view class="page-content">
    <view class="main">
      <view class="setting-content">
        <view class="row" bindtap="changeAvatar">
          <label>头像设置</label>
          <view class="show-tips">
            <image src="{{setting.avatar}}"></image>
            <view class="btn btn-arrow"></view>
          </view>
        </view>
        <view class="row" bindtap="taoZhuan" data-url="../userinfo/userinfo">
          <label>个人资料</label>
          <view class="btn-arrow">
          </view>
        </view>
      </view>
      <view class="setting-content">
        <view class="row" bindtap="taoZhuan" data-url="../accountinfo/accountinfo">
          <label>账户信息</label>
          <view class="btn-arrow">
          </view>
        </view>
        <view class="row">
          <label>空间设置</label>
          <view class="show-tips">
            <picker bindchange="changeSpace" value="{{setting.space}}" range="{{['完全公开','仅好友可见','不公开']}}">
              <view class="picker">
                {{setting.space==0?'完全公开':setting.space==1?'仅好友可见':'不公开'}}
              </view>
            </picker>
          </view>
        </view>
        <view class="row" bindtap="taoZhuan" data-url="../security_setting/security_setting">
          <label>安全设置</label>
          <view class="btn-arrow">
          </view>
        </view>
        <view class="row" bindtap="taoZhuan" data-url="../real_name/real_name">
          <label>实名认证</label>
          <view class="btn-arrow">
          </view>
        </view>
      </view>
      <view class="setting-content">
        <view class="row" bindtap="taoZhuan" data-url="../changeaccount/changeaccount">
          <label>家谱账户切换</label>
          <view class="btn-arrow">
          </view>
        </view>
        <view class="row" bindtap="taoZhuan" data-url="../changerole/changerole" wx:if='{{is_ok}}'>
          <label>登陆角色切换</label>
          <view class="btn-arrow">
          </view>
        </view>
      </view>
      <view class="setting-content" style="padding:0;">
        <button class="btn btn-logout" bindtap="logout">退出登录</button>
      </view>
    </view>
    <alert id="alert"/>
  </view>
</view>
